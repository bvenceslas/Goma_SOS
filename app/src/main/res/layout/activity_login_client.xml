<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.android.brain.sosfind.login_client"
        android:weightSum="1"

>

    <include
        layout="@layout/activity_bar"
        android:id="@+id/bar_login_client"
        />

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
    >

        <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_phone_android"
                android:drawablePadding="10dp"
                android:hint="Numéro de téléphone"
                android:inputType="phone"
        />

        <Button
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/style_general_color_btn"
                android:layout_marginTop="4dp"
                android:text="Obtenir le code"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnlogin_client"
                android:layout_gravity="center"
        />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
    >

        <EditText
                android:id="@+id/etcodeverify"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/ic_lock_outline"
                android:drawablePadding="10dp"
                android:hint="Code de validation"
                android:inputType="phone"
        />

        <Button
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/style_general_color_btn"
                android:layout_marginTop="4dp"
                android:text="Continuer"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCodevalidation"
                android:layout_gravity="center"
        />
    </LinearLayout>


</LinearLayout>
