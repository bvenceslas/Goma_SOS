<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.brain.sosfind.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_dark"
            android:orientation="vertical"
            android:padding="20dp"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goma SOS"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="35sp"
                android:layout_marginTop="25dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Find"
                android:textColor="#fff"
                android:textSize="30sp" />

        <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/sostof2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
        />

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

            <Button
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_btn_red"
                    android:text="AGENT SOS"
                    android:textColor="#ffff"
                    android:id="@+id/btn_chauf"
            />
            <Button android:id="@+id/btn_client"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_btn_transparent"
                    android:text="CIVIL"
                    android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
