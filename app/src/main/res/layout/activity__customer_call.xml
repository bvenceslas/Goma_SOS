<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_dark"
        tools:context="com.android.brain.sosfind.activity_CustomerCall">


    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:id="@+id/lineraviews"
    >

        <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
        />

        <TextView
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
        />

        <TextView
                android:id="@+id/txtAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
        />

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/map_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent = "true"
            android:src="@drawable/imgmap"
            app:civ_border_width="5dp"
            app:civ_border_color="@android:color/holo_green_dark"
    />


    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
    >
        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_red"
                android:text="Accepter"
                android:textColor="#fff"
                android:id="@+id/btn_accept"
        />
        <Button android:id="@+id/btn_cancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_transparent"
                android:text="Annuler"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
        />

    </LinearLayout>

</RelativeLayout>
