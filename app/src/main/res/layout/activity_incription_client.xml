<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.android.brain.sosfind.incription_client">

    <include
            layout="@layout/activity_bar"
            android:id="@+id/bar_inscription_client"
    />

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:id="@+id/mlayoutIdentity"
    >

        <EditText
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_person_outline"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Nom et PrÃ©nom"
                android:id="@+id/editNoms_client"
                android:inputType="text"
        />

        <Button
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/style_general_color_btn"
                android:layout_marginTop="10dp"
                android:text="Terminer"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_inscr_client"
                android:layout_gravity="center"
        />

    </LinearLayout>


</LinearLayout>
